<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="@string/pref_sync_locations_frequency_default_wifi"
        android:entries="@array/pref_sync_locations_frequency_titles_wifi"
        android:entryValues="@array/pref_sync_locations_frequency_values_wifi"
        android:key="@string/sync_frequency_locations_wifi_key"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_sync_locations_frequency_wifi" />

    <ListPreference
        android:defaultValue="@string/pref_sync_airpollution_frequency_default_wifi"
        android:entries="@array/pref_sync_airpollution_frequency_titles_wifi"
        android:entryValues="@array/pref_sync_airpollution_frequency_values_wifi"
        android:key="@string/sync_frequency_airpollution_wifi_key"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_sync_airpollution_frequency_wifi" />

    <ListPreference
        android:defaultValue="@string/pref_sync_locations_frequency_default"
        android:entries="@array/pref_sync_locations_frequency_titles"
        android:entryValues="@array/pref_sync_locations_frequency_values"
        android:key="@string/sync_frequency_locations_key"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_sync_locations_frequency" />

    <ListPreference
        android:defaultValue="@string/pref_sync_airpollution_frequency_default"
        android:entries="@array/pref_sync_airpollution_frequency_titles"
        android:entryValues="@array/pref_sync_airpollution_frequency_values"
        android:key="@string/sync_frequency_airpollution_key"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_sync_airpollution_frequency" />

    <!-- This preference simply launches an intent when selected. Use this UI sparingly, per
         design guidelines. -->
    <!--<Preference android:title="@string/pref_title_system_sync_settings">
        <intent android:action="android.settings.SYNC_SETTINGS" />
    </Preference>-->

</PreferenceScreen>
